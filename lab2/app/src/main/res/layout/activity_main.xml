<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:textSize="32sp"
            android:text="/"
            android:layout_weight="1"
            android:id="@+id/btnDiv"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="132dp"
            android:layout_marginEnd="72dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/input2" app:layout_constraintVertical_bias="1.0"/>

    <Button
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:textSize="32sp"
            android:text="*"
            android:layout_weight="1"
            android:id="@+id/btnMul"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="132dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="136dp"/>
    <Button
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:textSize="32sp"
            android:text="-"
            android:layout_weight="1"
            android:id="@+id/btnSub"
            android:layout_marginBottom="132dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="144dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:textSize="32sp"
            android:text="+"
            android:layout_weight="1"
            android:id="@+id/btnPlus"
            android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="56dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/btnMul"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/input1"
            app:layout_constraintHorizontal_bias="0.552" app:layout_constraintVertical_bias="0.428"/>
    <EditText android:layout_width="150dp"
              android:layout_height="52dp"
              android:layout_weight="1"
              android:textSize="32sp"
              android:hint="@string/input2"
              android:inputType="number|numberDecimal"
              android:id="@+id/input2"
              android:layout_marginEnd="16dp"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginBottom="216dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText android:layout_width="147dp"
              android:layout_height="53dp"
              android:layout_weight="1"
              android:textSize="32sp"
              android:hint="@string/input1"
              android:inputType="number|numberDecimal"
              android:id="@+id/input1"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="16dp"
              android:layout_marginBottom="216dp" app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:layout_width="378dp"
            android:layout_height="394dp"
            android:textSize="64sp"
            android:text="@string/_0"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/resultText"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="320dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.47"/>

</android.support.constraint.ConstraintLayout>